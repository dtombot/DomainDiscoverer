---
export interface Props { title?: string; description?: string; canonical?: string; robots?: string; }
const {
  title = 'Domain Discoverer - Discover Valuable Domain Names',
  description = 'Discover valuable domain names faster. Check availability instantly and use curated tools and guides for investors, businesses, SaaS, SEO experts, and startups.',
  canonical,
  robots = 'index,follow'
} = Astro.props as Props;
import '../styles/tailwind.css';
const fullTitle = title.includes('Domain Discoverer') ? title : `${title} - Domain Discoverer`;
const path = Astro.url.pathname;
const isActive = (href: string) => path === href || path.startsWith(href + '/');
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical ?? `https://domaindiscoverer.com${Astro.url.pathname}`} />
    <meta name="robots" content={robots} />
    <meta name="theme-color" content="#0b0013" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://domaindiscoverer.com${Astro.url.pathname}`} />
    <meta property="og:image" content="/og-default.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-default.png" />
    <title>{fullTitle}</title>
    <link rel="icon" href="/favicon.ico" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Manrope:wght@500;600;700;800&family=Plus+Jakarta+Sans:wght@500;600;700;800&display=swap" rel="stylesheet"/>
    {import.meta.env.DEV && <link rel="stylesheet" href="/src/styles/tailwind.css" />}
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org', '@type': 'WebSite', name: 'Domain Discoverer', url: 'https://domaindiscoverer.com',
      potentialAction: { '@type': 'SearchAction', target: 'https://domaindiscoverer.com/?q={search_term_string}', 'query-input': 'required name=search_term_string' }
    })}></script>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-slate-900 font-body">
    <header id="site-header" class="fixed top-0 w-full z-20 bg-gradient-to-r from-[#0b0013]/80 to-[#130022]/70 backdrop-blur-xl border-b border-white/10 ring-1 ring-white/10 transition-shadow fade-in">
      <nav class="container-pad h-16 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 font-extrabold text-xl sm:text-2xl tracking-tight text-white">
          <img src="/logo.png" alt="Domain Discoverer logo" class="h-7 w-7 sm:h-8 sm:w-8 object-contain" loading="eager" />
          <span>Domain Discoverer</span>
        </a>
        <button id="nav-toggle" class="sm:hidden p-2 rounded-lg text-white hover:bg-white/10" aria-label="Toggle menu">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6"><path d="M4 6h16M4 12h16M4 18h16"/></svg>
        </button>
        <div id="nav-links" class="hidden sm:flex items-center gap-1 text-sm">
          <a href="/blog" aria-current={isActive('/blog') ? 'page' : undefined} class={`px-3 py-2 rounded-lg text-white transition-colors hover:bg-white/10 hover:text-accent focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/60 ${isActive('/blog') ? 'text-accent bg-white/10' : ''}`}>Blog</a>
          <a href="/#tools" class="px-3 py-2 rounded-lg text-white transition-colors hover:bg-white/10 hover:text-accent focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/60">Tools</a>
          <a href="/#check" class="px-3 py-2 rounded-lg text-white transition-colors hover:bg-white/10 hover:text-accent focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/60">Check</a>
        </div>
      </nav>
      <div id="nav-mobile" class="container-pad sm:hidden hidden pb-3">
        <div class="card p-3 mt-2">
          <a href="/blog" aria-current={isActive('/blog') ? 'page' : undefined} class={`block px-2 py-2 rounded-md text-white hover:bg-white/10 hover:text-accent ${isActive('/blog') ? 'text-accent bg-white/10' : ''}`}>Blog</a>
          <a class="block px-2 py-2 rounded-md text-white hover:bg-white/10 hover:text-accent" href="/#tools">Tools</a>
          <a class="block px-2 py-2 rounded-md text-white hover:bg-white/10 hover:text-accent" href="/#check">Check</a>
        </div>
      </div>
      <script>
        const header = document.getElementById('site-header');
        const toggle = document.getElementById('nav-toggle');
        const links = document.getElementById('nav-links');
        const mobile = document.getElementById('nav-mobile');
        toggle?.addEventListener('click', () => {
          const hidden = mobile.classList.contains('hidden');
          toggle.setAttribute('aria-expanded', String(hidden));
          if (hidden) { mobile.classList.remove('hidden'); links.classList.add('hidden'); }
          else { mobile.classList.add('hidden'); links.classList.remove('hidden'); }
        });

        const onScroll = () => {
          if (window.scrollY > 8) { header?.classList.add('shadow-lg','border-white/20'); }
          else { header?.classList.remove('shadow-lg','border-white/20'); }
        };
        window.addEventListener('scroll', onScroll, { passive: true });
        onScroll();
      </script>
    </header>
    <main class="flex-1 pt-20">
      <slot />
    </main>
    <footer class="mt-16 bg-gradient-to-b from-[#0b0013] to-[#130022] border-t border-white/10">
      <div class="container-pad py-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div>
          <div class="font-extrabold text-white text-lg">Domain Discoverer</div>
          <p class="text-white/70 mt-2 text-sm">Fast domain checks, helpful guides, and curated tools to help you build and invest with confidence.</p>
        </div>
        <div>
          <div class="text-white font-semibold mb-3">Explore</div>
          <ul class="space-y-2 text-sm">
            <li><a class="text-white/80 hover:text-white" href="/">Domain Availability Checker</a></li>
            <li><a class="text-white/80 hover:text-white" href="/blog">Domain Guides & Tutorials</a></li>
            <li><a class="text-white/80 hover:text-white" href="#tools">Best Domain Tools</a></li>
          </ul>
        </div>
        <div>
          <div class="text-white font-semibold mb-3">Site</div>
          <ul class="space-y-2 text-sm">
            <li><a class="text-white/80 hover:text-white" href="/about">About</a></li>
            <li><a class="text-white/80 hover:text-white" href="/contact">Contact</a></li>
            <li><a class="text-white/80 hover:text-white" href="/privacy">Privacy</a></li>
            <li><a class="text-white/80 hover:text-white" href="/disclosure">Affiliate Disclosure</a></li>
          </ul>
        </div>
        <div>
          <div class="text-white font-semibold mb-3">Connect</div>
          <p class="text-white/70 text-sm">Questions or suggestions? Reach out via the contact form.</p>
          <a href="/contact" class="mt-3 inline-block btn-outline px-4 py-2">Send a message</a>
        </div>
      </div>
      <div class="text-center text-white/70 text-xs pb-2">Disclosure: Some links may be affiliate links. If you purchase through them, we may earn a commission at no extra cost to you.</div>
      <div class="text-center text-white/60 text-xs pb-6">Â© {new Date().getFullYear()} Domain Discoverer. All rights reserved.</div>
    </footer>
    <!-- Cookie consent -->
    <div id="cookie-banner" class="fixed inset-x-0 bottom-3 mx-auto w-[95%] sm:w-auto sm:left-1/2 sm:-translate-x-1/2 sm:bottom-6 z-30 hidden">
      <div class="backdrop-blur-xl bg-white/70 text-slate-900 border border-slate-200/60 shadow-xl rounded-2xl px-4 py-3 sm:px-5 sm:py-4 flex flex-col sm:flex-row items-start sm:items-center gap-3">
        <div class="text-sm leading-snug">We use functional cookies to keep things running. See our <a href="/privacy" class="underline">privacy</a>.</div>
        <div class="flex gap-2 ml-auto">
          <button id="cookie-accept" class="px-3 py-2 bg-slate-900 text-white rounded-xl text-sm font-semibold hover:opacity-90">Got it</button>
        </div>
      </div>
    </div>
    <script>
      if (import.meta.env.DEV) {
        const log = (...a) => console.log('[DEV]', ...a);
        const err = (...a) => console.error('[DEV ERROR]', ...a);
        window.addEventListener('error', (e) => { err('window.error:', e.message, e.filename||'', e.lineno||'', e.error||''); });
        window.addEventListener('unhandledrejection', (e) => { err('unhandledrejection:', e.reason); });
        document.addEventListener('DOMContentLoaded', () => {
          const links = Array.from(document.querySelectorAll('link[rel="stylesheet"]'));
          links.forEach((l) => { l.addEventListener('load', () => log('CSS loaded:', l.href)); l.addEventListener('error', () => err('CSS failed to load:', l.href)); });
          const bg = getComputedStyle(document.body).backgroundColor; log('Computed body background:', bg);
        });
      }
      // Cookie consent
      (function(){
        const KEY = 'dd_cookie_consent_v1';
        const banner = document.getElementById('cookie-banner');
        const accept = document.getElementById('cookie-accept');
        try {
          if (!localStorage.getItem(KEY)) banner?.classList.remove('hidden');
          accept?.addEventListener('click', () => { localStorage.setItem(KEY, '1'); banner?.classList.add('hidden'); });
        } catch(_) {}
      })();
    </script>
  </body>
  </html>
